<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Home</title>
</head>
<body>
<h2>Posts</h2>
<% posts.forEach(function(post) { %>
    <div>
        <h3><%= post.title %></h3>
        <p><%= post.content %></p>
        <p>Author: <%= post.author.username %></p>
    </div>
<% }); %>
<a href="/post">Create a Post</a> | <a href="/login">Login</a> | <a href="/register">Register</a>
</body>
</html>
